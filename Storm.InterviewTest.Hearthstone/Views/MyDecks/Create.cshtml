@model Storm.InterviewTest.Hearthstone.Models.DeckBuilderCreateViewModel

@{
    ViewBag.Title = "Home Page";
}

<h1>Deck Builder</h1>

<div class="panel panel-default">
    <div class="panel-heading">Create A New Deck</div>
    <div class="panel-body">
    @using (Html.BeginForm())
    {
        @Html.Hidden(Model.HeroCard.Id)
        <input type="text" class="form-control" placeholder="Deck Name"/>

        <ul class="list-inline">
        @foreach (var card in Model.AvailableCards)
        {
            <li>
                @Html.Partial("_Card", card)
            </li>
        }
        </ul>

        <input type="submit" value="Create Deck" />
        }
</div>
</div>